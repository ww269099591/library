<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ww.library.dao.BookDao">

    <select id="findBooksByKeyWord" resultType="com.ww.library.entity.Book" parameterType="java.lang.String">
        select * from book where name like "%"#{keyword}"%" or author like "%"#{keyword}"%"
    </select>

</mapper>